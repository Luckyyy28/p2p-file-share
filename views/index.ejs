<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <title>P2P File Sharing</title>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="max-w-lg w-full p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-2xl font-bold text-center mb-4">P2P File Sharing</h1>

        <!-- File upload form -->
        <form action="/seed" method="POST" enctype="multipart/form-data" class="mb-6">
            <label class="block mb-2 text-sm font-medium text-gray-700">Select a file to share:</label>
            <input name="file" type="file" class="block w-full text-sm text-gray-500 bg-gray-100 p-2 rounded mb-4"
                required>
            <button type="submit" class="w-full p-2 bg-blue-500 text-white rounded">Share File</button>
        </form>

        <!-- Display magnet URI -->
        <% if (magnetURI) { %>
            <div class="mt-4">
                <p class="text-gray-700 font-medium">Magnet URI:</p>
                <textarea readonly class="w-full p-2 mt-2 bg-gray-100 rounded"><%= magnetURI %></textarea>
            </div>
            <% } %>

                <!-- Download file form -->
                <form action="/download" method="POST" class="mt-8">
                    <label class="block mb-2 text-sm font-medium text-gray-700">Paste a Magnet URI to download:</label>
                    <textarea name="magnetURI" class="block w-full p-2 mb-2 bg-gray-100 rounded"></textarea>
                    <button type="submit" class="w-full p-2 bg-green-500 text-white rounded">Download File</button>
                </form>

                <!-- List of Files -->
                <h2>Available Files</h2>
                <ul class="bg-gray-400">
                    <% files.forEach(file=> { %>
                        <li>
                            <strong>
                                <%= file.name %>
                            </strong> -

                            <form action="/download" method="POST" style="display:inline;">
                                <input type="hidden" name="magnetURI" value="<%= file.magnetURI %>">
                                <button type="submit">Download</button>
                            </form>
                        </li>
                        <% }); %>
                </ul>
    </div>
</body>

</html>